<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Definicion de la vista-->
    <record id="academy_group_action" model="ir.actions.act_window">
        <field name="name">Academy Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">academy.group</field>
        <field name="help" type="html">
            <tree string="Academy group">
                <field name="name"/>
            </tree>
            <p class="o_view_nocontent_smiling_face">
                Create a Academy group
            </p>
        </field>
    </record>

    <!--Formulario de edicion-->
    <record id="academy_group_form" model="ir.ui.view">
        <field name="name">academy.group.form</field>
        <field name="model">academy.group</field>
        <field name="arch" type="xml">
        <form string="Academy group">
            <sheet>
                <group >
                    <field name="name" placeholder="Group name"/>
                    <field name="res_partner_ids" options="{'no_create': True}" readonly="1" />
                </group>
            </sheet>
        </form>
        </field>
    </record>

 <menuitem id="mirko_group" name="Mirko Groups"
        parent="contacts.res_partner_menu_config" sequence="9999"/>

    <!-- Boton de actions dentro de contactos -->
    <menuitem
        id="academy_group_menu"
        action="academy_group_action"
        name="Academy group"
        parent="mirko_group"
        sequence="1"
    />

</odoo>
